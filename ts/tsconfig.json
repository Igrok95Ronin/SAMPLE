{
    "compilerOptions":{//настраивает параметры компиляции
        "target": "ES6",//указываем стандарт
        "removeComments":true,//удаляем коментарии при комбиляции
        "outDir": "./js/app.js",//папка выходного файла
        "sourceMap":true,//карта
        "outFile": "../js/app.js",//имя выходного файла
        "noEmitOnError": true,//что не надо генерировать файл javascript, если при компиляции возникли ошибки
    }
}
//tsc -w запускаем комбилятор